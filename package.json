{
	"name": "firestorter",
	"version": "1.2.2",
	"description": "Simple & super fast Firestore to React bindings using Mobx observables",
	"keywords": [
		"react-firestore-mobox",
		"react-firestore",
		"react-firebase",
		"firestorter",
		"firestoreter",
		"firestore-mobx",
		"firebase-mobx",
		"firestore-react",
		"mobx-firestore",
		"firestore-collection"
	],
	"main": "lib/firestorter.js",
	"umd:main": "lib/firestorter.umd.js",
	"module": "lib/firestorter.module.js",
	"unpkg": "lib/firestorter.umd.min.js",
	"jsnext:main": "lib/firestorter.module.js",
	"react-native": "lib/firestorter.module.js",
	"typings": "lib/index.d.ts",
	"repository": "https://github.com/IjzerenHein/firestorter",
	"author": "IjzerenHein <hrutjes@gmail.com>",
	"license": "MIT",
	"files": [
		"src",
		"lib"
	],
	"scripts": {
		"build": "node scripts/build.js",
		"lint": "tslint -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
		"test": "node ./test/seedSampleData.js && jest",
		"cov": "jest --coverage",
		"doc": "jsdoc2md --files 'src/**/*.ts' --configure jsdoc2md.json > ./docs/API.md"
	},
	"dependencies": {
		"lodash.isequal": "^4.5.0"
	},
	"peerDependencies": {
		"mobx": ">= 4"
	},
	"devDependencies": {
		"@babel/core": "^7.5.5",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.5.5",
		"@babel/preset-env": "^7.5.5",
		"@babel/preset-typescript": "^7.3.3",
		"@release-notes/cli": "^0.3.0",
		"@types/jest": "^24.0.16",
		"@types/lodash.isequal": "^4.5.5",
		"@types/node": "^12.6.9",
		"babel-eslint": "^10.0.2",
		"codecov": "^3.5.0",
		"envify": "^4.1.0",
		"firebase": "^6.3.4",
		"fs-extra": "^8.1.0",
		"jest": "^24.8.0",
		"jsdoc-babel": "^0.5.0",
		"jsdoc-to-markdown": "^5.0.0",
		"mobx": "^5.13.0",
		"prettier": "^1.18.2",
		"rollup": "^1.18.0",
		"rollup-plugin-filesize": "^6.1.1",
		"rollup-plugin-node-resolve": "^5.2.0",
		"shelljs": "^0.8.3",
		"superstruct": "^0.6.1",
		"ts-jest": "^24.0.2",
		"tslint": "^5.18.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.5.3",
		"uglify-es": "^3.3.9"
	}
}
