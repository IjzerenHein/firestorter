{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "declaration": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["./src", "./test"]
}
