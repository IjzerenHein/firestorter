{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./lib",
		"declaration": true,
		"downlevelIteration": true,
		"alwaysStrict": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitThis": false,
		"experimentalDecorators": true
	},
	"include": ["./src/**/*.ts"]
}
